<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.production.rclark.simpleatvbrowser.MainActivity"
    tools:showIn="@layout/activity_main">

    <fragment android:name="com.production.rclark.simpleatvbrowser.SearchbarFragment"
        android:id="@+id/searchbar_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container">
        <!-- allocate web fragment dynamically so we can swap around... -->
    </FrameLayout>


</LinearLayout>