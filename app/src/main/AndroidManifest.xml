<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rclark.simpleatvbrowser"
    android:versionCode="1"
    android:versionName="0.0">


    <uses-permission android:name="android.permission.INTERNET" />
    <!-- this clever little permission lets us use the right stick as a mouse on nvidia shield -->
    <uses-permission android:name="nvidia.atv.rs_mouse" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/www"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Leanback">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:authorities="com.example.rclark.simpleatvbrowser"
            android:name=".data.FavProvider"
            android:exported="false"
            android:syncable="true" />

    </application>

</manifest>
